@model StorytellingWebApp.Models.ChapitreCreationVM

<div style="display:flex;align-content:space-between;">

  <div style="flex: 1;border: 2px solid yellow; margin-right: 20px; background-color:lightskyblue;">
      <div>
         <img src="@Model.image.Uri" style="width:300px;height:200px;"/>
      </div>
      <div>
          <h5 style="font:x-large">@Model.image.NomImage</h5>
      </div>
  </div>
  
  <div style="flex: 1;border: 2px solid yellow; margin-right: 20px; background-color:lightgreen">
    <form asp-action="CreatePost" >
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
          <div class="form-group" hidden>
                <label asp-for="idStoryTelling" class="control-label"></label>
                <input asp-for="idStoryTelling" class="form-control" />
            </div>
             <div class="form-group" hidden>
                <label asp-for="idImage" class="control-label"></label>
                <input asp-for="idImage" class="form-control"/>
            </div>
            <div class="form-group">
                <label asp-for="story.NomStory" class="control-label"></label>
                <input asp-for="story.NomStory" class="form-control"/>
                <span asp-validation-for="story.NomStory" class="text-danger"></span>
            </div>
                 <div class="form-group">
                <label asp-for="story.TextStory" class="control-label"></label>
                <input asp-for="story.TextStory" class="form-control"/>
                <span asp-validation-for="story.TextStory" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create Story" class="btn btn-primary" />
            </div>
    </form>
  </div>
  
</div>
