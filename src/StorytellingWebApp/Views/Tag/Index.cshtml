@model StorytellingWebApp.Models.TagVM

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Tag.NameTag" class="control-label"></label>
                <input asp-for="Tag.NameTag" class="form-control"/>
                <span asp-validation-for="Tag.NameTag" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create a new user" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Tag.NameTag)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Tags) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NameTag)
            </td>
            <td>
                <form asp-action="Delete" asp-route-id="@item.IdTag">
                     <input type="submit" value="Delete" class="btn btn-danger" /> 
                </form>
            </td>

        </tr>
}
    </tbody>
</table>