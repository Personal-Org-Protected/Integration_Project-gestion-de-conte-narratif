@model StorytellingWebApp.Models.ImageClientVM


<div class="align-content-between col-3 flex-row">
<div class="row">
    <div class="col-xl-3">
        <form asp-action="GetClientImage" >
            <div style="display:flex; justify-content:space-evenly;flex-direction:column-reverse">
                <div class="form-group">
                  <label asp-for="@Model.Search"></label>
                   <input asp-for="@Model.Search"/>
                </div>
                <div class="form-group" style="transform:translateY(18pt)">
                    <input type="submit" value="Sort" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
</div>
</div>

<br />
<br />
<br />

    <table class="table">
    <thead>
        <tr>
            <th>
               Image
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
            @foreach (var item in Model.value) {
                    <tr style="height:fit-content;width:fit-content;">
                        <td>
                            <img src="@item.url" alt="Not Found" style="height:200px; width:300px" >
                        </td>
                    @if (User.Identity.IsAuthenticated) {
                        <td> 
                            <a class="btn btn-primary u-btn-1" asp-controller="Image" asp-action="CreateFromClient" asp-route-Uri="@item.url">Select this Image</a>
                        </td>
                    }

                    </tr>

            }
    </tbody>
</table>

