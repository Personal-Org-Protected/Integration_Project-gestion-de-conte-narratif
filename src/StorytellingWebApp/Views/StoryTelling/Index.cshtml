@model StorytellingWebApp.Models.PaginatedItems<StorytellingWebApp.Models.StoryTell>


<h1>All your Stories</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create a new story</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                NameStory
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Items) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NameStory)
            </td>
            <td>
                <a asp-controller="Chapitre" asp-action="Index" asp-route-idStoryTell="@item.IdStoryTelling" asp-route-pgNumber="1" class="btn btn-primary">Select</a>
                <form asp-action="Delete" asp-route-id="@item.IdStoryTelling">
                     <input type="submit" value="Delete" class="btn btn-danger" /> 
                </form>
            </td>

        </tr>
}
    </tbody>
</table>


<div class="footer" style=" width: 100%;">

             <table cellpadding="0" cellspacing="0" style="align-content:center">
                <tr>
                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        <td>
                            @if (Model.HasNextPage)
                            {
                                <a asp-action="Index" asp-route-pgNumber="@i">@i</a>
                            }
                            else
                            {
                                <span>@i</span>
                            }
                        </td>
                    }
                </tr>
            </table>
</div>