@model StorytellingWebApp.Models.UserVM

<a class="btn btn-primary" asp-action="Create" > Create New</a>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.user.username)
            </th>
               <th>
                @Html.DisplayNameFor(model => model.user.email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.PaginatedItems.Items) {
            <tr>
            <td>
                @Html.DisplayFor(modelItem => item.username)
            </td>
             <td>
                @Html.DisplayFor(modelItem => item.email)
            </td>
            <td>
                <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.user_id">More details</a>
            </td>

        </tr>
}
    </tbody>
</table>

<div class="footer">

             <table cellpadding="0" cellspacing="0">
                <tr>
                    @for (int i = 1; i <= Model.PaginatedItems.TotalPages; i++)
                    {
                        <td>
                            @if (i != Model.PaginatedItems.PageNumber)
                            {
                                <a asp-action="Index"  asp-route-pgNumber="@i">@i</a>
                            }
                            else
                            {
                                <span>@i</span>
                            }
                        </td>
                    }
                </tr>
            </table>
</div>
